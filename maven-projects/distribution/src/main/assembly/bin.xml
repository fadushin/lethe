<assembly>
    <!-- id typically identifies the "type" (src vs bin etc) of the assembly -->
    <id></id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>dir</format>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>src/main/release</directory>
            <outputDirectory>lethe-${lethe.version}</outputDirectory>
            <includes>
                <include>bin/*</include>
                <include>etc/*</include>
                <include>licenses/*.*</include>
                <include>lib/*</include>
                <include>README.txt</include>
            </includes>
        </fileSet>
    </fileSets>
    
    <dependencySets>
        <dependencySet>
            <outputDirectory>lethe-${lethe.version}/lib</outputDirectory>
            <unpack>false</unpack>
            <!--
            <excludes>
                <exclude>net.dushin.lethe:*</exclude>
            </excludes>
            -->
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>

</assembly>
